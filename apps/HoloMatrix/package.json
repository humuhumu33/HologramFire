{
  "name": "holomatrix",
  "version": "1.0.0",
  "description": "Hologram Virtual Infra MatMul Demo - 12,288 lattice with 25 Gbit/s target",
  "main": "dist/demo.js",
  "scripts": {
    "demo": "ts-node src/demo.ts",
    "demo:transport": "ts-node src/steps/01-transport.ts",
    "demo:storage": "ts-node src/steps/02-storage.ts",
    "demo:compute": "ts-node src/steps/03-compute.ts",
    "demo:bench": "ts-node src/steps/04-bench.ts --duration 10 --lanes 64 --payload 4096 --batch 16 --workers 4 --window 100 --target 25",
    "demo:matmul": "ts-node src/steps/05-matmul.ts --size 2048 --block 128 --lanes 64 --payload 8192 --batch 256 --workers 8 --window 100 --targetGbps 1 --iterations 500",
    "demo:matmul:optimized": "ts-node src/steps/05-matmul-throughput-optimized.ts --size 2048 --block 128 --lanes 64 --payload 8192 --batch 256 --workers 8 --window 100 --targetGbps 1 --iterations 500",
    "test:throughput": "ts-node test-throughput-optimization.ts",
    "demo:1000": "ts-node run-1000-matrices.ts",
    "demo:8192": "ts-node run-8192-matrices.ts",
    "demo:8192-optimized": "ts-node run-8192-matrices-optimized.ts",
    "demo:100-streaming": "ts-node run-100-matrices-streaming.ts",
    "demo:100-ultra": "ts-node run-100-matrices-ultra-streaming.ts",
    "demo:100-fixed": "ts-node run-100-matrices-fixed.ts",
    "demo:2048-100": "ts-node run-2048-matrices-100-test.ts",
    "demo:2048-100-simple": "ts-node run-2048-matrices-100-simple.ts",
    "demo:2048-100-64lanes-hw": "ts-node run-2048-matrices-100-64lanes-hardware.ts",
    "demo:ultra-performance": "ts-node run-ultra-performance-128lanes-500iter-batch512.ts",
    "demo:ultra-simple": "ts-node run-ultra-performance-simple.ts",
    "bench:optimized": "ts-node src/steps/04-bench-optimized.ts",
    "bench:optimized:1g": "ts-node src/steps/04-bench-optimized.ts --target 1 --duration 30",
    "bench:optimized:5g": "ts-node src/steps/04-bench-optimized.ts --target 5 --lanes 64 --workers 16",
    "bench:optimized:matrix": "ts-node src/steps/04-bench-optimized.ts --matrix",
    "bench:optimized:run": "node run-optimized-throughput.js",
    "optimize:throughput": "npm run build && npm run bench:optimized:run",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc -p .",
    "clean": "rimraf dist"
  },
  "keywords": ["hologram", "matrix", "multiplication", "verification", "blockchain"],
  "author": "Hologram Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0"
  }
}
