  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "../build/dist",
    "resolveJsonModule": true
  },
  "include": ["../src", "../tests", "../tools/scripts"]
}
