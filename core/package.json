{
  "name": "@hologram/core",
  "version": "1.0.0",
  "description": "Core Hologram SDK with GraphQL Content Resolution and IPFS Integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:graphql": "tsc -p tsconfig.json",
    "test": "jest",
    "test:graphql": "ts-node src/graphql/test.ts",
    "test:graphql:simple": "ts-node src/graphql/simple-test.ts",
    "test:ipfs": "ts-node src/ipfs/test.ts",
    "start:graphql": "ts-node src/graphql/server-standalone.ts",
    "start:graphql:express": "ts-node src/graphql/server-express.ts",
    "dev:graphql": "tsx watch src/graphql/server-standalone.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "apollo-server-core": "^3.12.1",
    "apollo-server-express": "^3.12.1",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "ipfs-http-client": "^60.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "hologram",
    "graphql",
    "ipfs",
    "atlas-12288",
    "content-resolution",
    "distributed-storage",
    "bijective-mapping",
    "conservation-laws"
  ],
  "author": "Hologram Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hologram/core.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
